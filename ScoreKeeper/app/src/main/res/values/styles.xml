<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#263238</item>
        <item name="colorButtonNormal">#FFFFFF</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_marginBottom">@dimen/button_margin</item>
        <item name="android:layout_marginLeft">@dimen/button_margin_left</item>
        <item name="android:layout_marginRight">@dimen/button_margin_right</item>
    </style>

    <style name="PlayerTextStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">@dimen/player_text_padding</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/player_text_size</item>
    </style>

    <style name="ScoreTextStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingBottom">@dimen/score_text_padding_bottom</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/score_text_size</item>
    </style>

</resources>
